@model FinalProject.Models.SummaryPage.SummaryInformation

@{
    ViewBag.Title = "Index";
}

<h2>Summary</h2>

<body>
    <div>
        Your movie selection is @Model.MovieTitle! Enjoy!
        <div class="col-lg-6">
            <img class="card-img-top" src="http://image.tmdb.org/t/p/w185/@Model.PosterPath" alt="Card image cap">
        </div>
    </div>
    <p>To continue on to food, please enter your ZipCode</p>
    @using (Html.BeginForm("index", "food"))
    {
        <input type="text" name="zip" />
        <input type="submit" />
    }

    @{

        var get = HttpContext.Current.Request.Cookies["information"].Value; //pulls cookie
        var result = Newtonsoft.Json.JsonConvert.DeserializeObject<List<FinalProject.Models.MoviePopularity.MoviePopularityResults>>(get); //break the cookie into objects
       

        <p>You fought over these movies:</p> //iterate list
        foreach (var item in result)
        {

        <p>@item.title</p>
        
            }

        HttpContext.Current.Response.
        }   
</body>